{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "statsdaemon"
    },
    "spec": {
	"selector": {
	    "run": "statsdaemon"
	},
        "ports": [
            {
		"name": "statsd-udp",
                "protocol": "UDP",
                "port": 8125,
                "targetPort": 8125
            },
	    {
		"name": "statsd-tcp",
                "protocol": "TCP",
                "port": 8126,
                "targetPort": 8126
            }
        ]
    }
}
